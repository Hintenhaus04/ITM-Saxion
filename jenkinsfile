pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                bat 'dotnet build'
            }
        }

        stage('Test') {
            steps {
                bat 'dotnet test'
            }
        }

        stage('Security Test - ZAP') {
            steps {
                // Hier roep je ZAP aan. 
                // Vervang <url-van-je-app> door de werkelijke endpoint.
                // En pas het pad aan naar waar zap.bat staat.
                bat """
                ""C:/Program Files/ZAP/Zed Attack Proxy/zap.bat"" 
                  -cmd 
                  -quickscan 
                  http://192.168.146.128:8080
                  -config logfile=zap-scan.log
                """
            }
        }
    }

    post {
        always {
            echo 'Pipeline klaar (inclusief ZAP-scan).'
            // Archive the logs
             archiveArtifacts artifacts: 'zap-scan.log'
        }
        success {
            echo 'Alle stages geslaagd, inclusief security scan!'
        }
        failure {
            echo 'Er is iets misgegaan in één van de stages.'
        }
    }
}
